<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="24dp" >
    <androidx.cardview.widget.CardView
        android:layout_width="272dp"
        android:layout_height="272dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="24dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white">
        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logo_app"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/great_job"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/color_700"
        android:gravity="center"
        android:layout_marginBottom="6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_artwork_has_been_saved_stay_creative_and_keep_shining"
        android:layout_marginHorizontal="24dp"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/color_700"
        android:gravity="center"
        android:layout_marginBottom="24dp" />


    <LinearLayout
        android:id="@+id/ll_explore"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_btn_app_gradient"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_create_image"
            android:layout_marginEnd="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_more"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="36dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_download_image"
                android:layout_marginEnd="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/download"
                android:textColor="@color/color_700"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold" />

            <ImageView
                android:id="@+id/iv_reward_download"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_reward"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_share_image"
                android:layout_marginEnd="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:textColor="@color/color_700"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold" />

            <ImageView
                android:id="@+id/iv_reward_share"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_reward"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fr_ads" />
</LinearLayout>